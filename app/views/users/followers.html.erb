<h1>フォロワー一覧</h1>


<% @users.each do |user| %>
<div id="icon_name" style="float:left;">
    <div class="col-xs-1">
    <%= gravatar_for user %>
    </div>
    <br/>
    <div class="">
        <span class="label label-info">ユーザー名:<%= user.name %></span><br/>
    </div>
</div>

<div class="panel panel-primary col-xs-offset-2">
  <div class="panel-heading">
    <h3 class="panel-title">プロフィール</h3>
  </div>
  <div class="panel-body">
    <%= user.profile %>
  </div>
</div>
    <br/>
<% end %>